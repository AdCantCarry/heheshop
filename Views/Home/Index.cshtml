@model List<heheshop.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- AOS CSS -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    body {
        background: radial-gradient(circle at top, #090979, #020024);
    }

    .hero-section {
        position: relative;
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: #ffffff;
        background: linear-gradient(135deg, rgba(9, 9, 121, 0.8), rgba(2, 0, 36, 0.8)), url('/images/hero-bg.jpg') center/cover no-repeat;
        border-radius: 1rem;
        margin: 2rem auto;
        max-width: 1400px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.4);
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 1rem;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        padding: 2rem;
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: 800;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        margin-bottom: 1rem;
    }

    .hero-content p {
        font-size: 1.4rem;
        font-weight: 300;
        max-width: 600px;
        margin: 0 auto 2rem;
    }

    .hero-content .btn {
        background-color: #a3bffa;
        border: none;
        border-radius: 2rem;
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .hero-content .btn:hover {
        background-color: #8aacf8;
        transform: translateY(-3px);
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
    }

    .card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 1rem;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
    }

    .card-img-top {
        height: 250px;
        object-fit: cover;
        width: 100%;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .card-body {
        padding: 1.5rem;
        text-align: center;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 1.1rem;
        color: #a3bffa;
        margin-bottom: 1rem;
    }

    .btn-view {
        background-color: #0d6efd;
        color: #ffffff;
        border-radius: 2rem;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-view:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
    }

    .new-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #a3bffa;
        color: #1a1a1a;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.3rem 0.8rem;
        border-radius: 1rem;
        z-index: 10;
    }

    media (max-width: 768px) {
        .hero-section {
            min-height: 50vh;
        }

        .hero-content h1 {
            font-size: 2.5rem;
        }

        .hero-content p {
            font-size: 1rem;
        }

        .card-img-top {
            height: 200px;
        }

        .section-title {
            font-size: 2rem;
        }
    }

    media (max-width: 576px) {
        .hero-content h1 {
            font-size: 2rem;
        }

        .hero-content .btn {
            padding: 0.5rem 1.5rem;
            font-size: 1rem;
        }

        .card-img-top {
            height: 180px;
        }
    }
</style>

<!-- Hero Section -->
<section class="hero-section" data-aos="fade-down" data-aos-duration="1200">
    <div class="hero-content">
        <h1>Chào Mừng Đến Với HeheShop!</h1>
        <p>Khám phá bộ sưu tập giày thời thượng, chất lượng hàng đầu, phù hợp với mọi phong cách.</p>
        <a class="btn" href="/products">Khám Phá Ngay</a>
    </div>
</section>

<!-- Products Section -->
<section class="container my-5">
    <h2 class="section-title" data-aos="fade-up" data-aos-duration="1000">Sản Phẩm Mới</h2>
    <div class="row g-4">
        @for (int i = 0; i < Model.Count; i++)
        {
            var product = Model[i];
            <div class="col-md-4 col-sm-6" data-aos="zoom-in" data-aos-delay="@(100 * (i % 3))">
                <div class="card h-100">
                    @if (i < 3)
                    {
                        <span class="new-badge">Mới</span>
                    }
                    <img src="@(product.Images.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png")" alt="@product.Name" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@string.Format("{0:N0} VND", product.Price)</p>
                        <a href="/products/details/@product.Id" class="btn btn-view">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- AOS Scripts -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true,
        offset: 100
    });
</script>
