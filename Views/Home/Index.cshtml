@model List<heheshop.Models.Product>

@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- AOS CSS -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />

<style>
    .section-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        color: #fff;
        text-align: center;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 1rem;
        overflow: hidden;
    }

    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
    }

    .card-img-top {
        height: 250px;
        object-fit: cover;
    }

    .card-title {
        font-weight: 600;
        font-size: 1.2rem;
    }

    .btn-view {
        background-color: #0d6efd;
        color: #fff;
        border-radius: 2rem;
        padding: 0.4rem 1.5rem;
        font-weight: 500;
    }

    .btn-view:hover {
        background-color: #0b5ed7;
    }

    .intro-section {
        text-align: center;
        padding: 4rem 1rem;
    }

    .intro-section h1 {
        font-size: 3rem;
        font-weight: 700;
    }

    .intro-section p {
        font-size: 1.2rem;
    }

    .intro-section .btn {
        margin-top: 1.5rem;
        font-weight: 600;
        border-radius: 2rem;
        padding: 0.5rem 2rem;
    }
</style>

<section class="intro-section" data-aos="fade-down">
    <h1>Chào mừng đến HeheShop!</h1>
    <p>Khám phá các mẫu giày mới nhất với phong cách thời thượng.</p>
    <a class="btn btn-light" href="/products">Xem tất cả sản phẩm</a>
</section>

<section class="container my-5">
    <h2 class="section-title" data-aos="fade-up">Sản phẩm mới</h2>
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-4" data-aos="zoom-in" data-aos-delay="100">
                <div class="card h-100 shadow border-0">
                    <img src="@product.Images.FirstOrDefault()?.ImageUrl ?? "/images/no-image.png"" class="card-img-top" alt="@product.Name">
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@string.Format("{0:N0} VND", product.Price)</p>
                        <a href="/products/details/@product.Id" class="btn btn-view">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- AOS Scripts -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init({
        duration: 1000,
        once: true
    });
</script>
