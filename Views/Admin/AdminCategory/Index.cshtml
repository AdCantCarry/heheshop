@model IEnumerable<heheshop.Models.Category>
@{
    ViewData["Title"] = "Quản lý Danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách Danh mục</h2>

<a class="btn btn-success mb-3" href="/AdminCategory/Create">Thêm danh mục</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/AdminCategory/Edit/@category.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" href="/AdminCategory/Delete/@category.Id" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
