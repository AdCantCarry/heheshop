@model IEnumerable<heheshop.Models.Brand>
@{
    ViewData["Title"] = "Quản lý Thương hiệu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách Thương hiệu</h2>

<a class="btn btn-success mb-3" href="/AdminBrand/Create">Thêm thương hiệu</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Tên thương hiệu</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.Id</td>
                <td>@brand.Name</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/AdminBrand/Edit/@brand.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" href="/AdminBrand/Delete/@brand.Id" onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
