@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - HeheShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome icon -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" /> <!-- Bootstrap Icons -->

    <style>
        .nav-box {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 2rem;
            padding: 0.5rem 2rem;
            max-width: 1200px;
            margin: 2rem auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .nav-box a {
            color: white;
            text-decoration: none;
            margin: 0 1rem;
        }

        .nav-btn {
            background-color: white;
            color: black;
            border-radius: 2rem;
            padding: 0.3rem 1.5rem;
            font-weight: bold;
            text-decoration: none;
        }

        body {
            background: radial-gradient(circle at top, #090979, #020024);
            color: white;
            min-height: 100vh;
        }

        .avatar-icon {
            width: 40px;
            height: 40px;
            background-color: #ffffffcc;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: black;
            cursor: pointer;
            position: relative;
        }

        .dropdown-menu {
            right: 0;
            left: auto;
        }

        .nav-icon {
            font-size: 1.3rem;
            margin-right: 1rem;
            color: white;
        }
    </style>
</head>
<body>
    <div class="nav-box">
        <div class="d-flex align-items-center">
            <a href="/">Trang Chủ</a>
            <a href="/products">Sản Phẩm</a>
            <a href="/news">Tin Tức</a>

            @if (role == "Admin")
            {
                <a href="/AdminDashboard" class="nav-btn ms-3">Trang Admin</a>
            }
        </div>
        <div class="d-flex align-items-center">
            <a href="/cart" class="nav-icon" title="Giỏ hàng">
                <i class="fas fa-shopping-cart"></i>
            </a>

            @if (string.IsNullOrEmpty(username))
            {
                <a href="/account/login" class="nav-btn ms-2">Đăng nhập</a>
            }
            else
            {
                <div class="dropdown ms-2">
                    <div class="avatar-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </div>
                    <ul class="dropdown-menu dropdown-menu-end text-dark">
                        <li class="dropdown-item disabled">
                            Xin chào, <strong>@username</strong>
                        </li>
                        <li><a class="dropdown-item" href="/account/profile">Thông tin cá nhân</a></li>
                        <li><a class="dropdown-item" href="/account/vouchers">Voucher</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/account/logout">Đăng xuất</a></li>
                    </ul>
                </div>
            }
        </div>
    </div>

    <main class="container text-center">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
