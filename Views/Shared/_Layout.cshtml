@{
    var username = Context.Session.GetString("Username");
    var role = Context.Session.GetString("Role");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HeheShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background: radial-gradient(circle at top, #090979, #020024);
            color: #ffffff;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .nav-box {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(12px);
            border-radius: 1rem;
            padding: 1rem 2rem;
            max-width: 1200px;
            margin: 1.5rem auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        .nav-box a {
            color: #ffffff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-box a:hover {
            color: #a3bffa;
        }

        .nav-btn {
            background-color: #ffffff !important;
            color: #1a1a1a !important;
            border-radius: 1.5rem;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            text-decoration: none;
            transition: background-color 0.3s ease, color 0.3s ease;
            border: 1px solid #1a1a1a;
        }

        .nav-btn:hover {
            background-color: #a3bffa !important;
            color: #1a1a1a !important;
            border-color: #a3bffa;
        }

        .avatar-icon {
            width: 38px;
            height: 38px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #1a1a1a;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            z-index: 1001;
        }

        .avatar-icon:hover {
            background-color: #a3bffa;
        }

        .dropdown-menu {
            background: #ffffff;
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            right: 0;
            left: auto;
            z-index: 1000;
            min-width: 200px;
        }

        .dropdown-menu .dropdown-item {
            color: #1a1a1a !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: background-color 0.3s ease, color 0.3s ease;
            cursor: pointer;
            pointer-events: auto; /* Ensure clickability */
        }

        .dropdown-menu .dropdown-item:hover {
            background-color: #a3bffa;
            color: #ffffff !important;
        }

        .dropdown-item.disabled {
            color: #6c757d !important;
            font-weight: 600;
            pointer-events: none; /* Disable clicks on disabled item */
        }

        .nav-icon {
            font-size: 1.4rem;
            color: #ffffff;
            margin-right: 1rem;
            transition: color 0.3s ease;
        }

        .nav-icon:hover {
            color: #a3bffa;
        }

        main.container {
            padding: 2rem 0;
        }

        .media (max-width: 768px) {
            .nav-box {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }

            .nav-box a {
                margin: 0.5rem 0;
            }
        }
    </style>
</head>
<body>
    <nav class="nav-box">
        <div class="d-flex align-items-center gap-3">
            <a href="/">Trang Chủ</a>
            <a href="/products">Sản Phẩm</a>
            <a href="/news">Tin Tức</a>
            @if (role == "Admin")
            {
                <a href="/Admin/Dashboard" class="nav-btn">Trang Admin</a>
            }
        </div>
        <div class="d-flex align-items-center gap-2">
            <a href="/cart" class="nav-icon" title="Giỏ hàng">
                <i class="fas fa-shopping-cart"></i>
            </a>
            @if (string.IsNullOrEmpty(username))
            {
                <a href="/account/login" class="nav-btn login-btn">Đăng nhập</a>
            }
            else
            {
                <div class="dropdown">
                    <div class="avatar-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </div>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-item disabled">
                            Xin chào, <strong>@username</strong>
                        </li>
                        <li><a class="dropdown-item logout-link" href="/account/logout">Đăng xuất</a></li>
                        <li><a class="dropdown-item" href="/account/profile">Thông tin cá nhân</a></li>
                        <li><a class="dropdown-item" href="/account/vouchers">Voucher</a></li>
                        <li><hr class="dropdown-divider"></li>
                        
                    </ul>
                </div>
            }
        </div>
    </nav>

    <main class="container text-center">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Logout confirmation for logout-link only
            document.querySelectorAll('.logout-link').forEach(link => {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    if (window.confirm('Bạn có chắc chắn muốn đăng xuất?')) {
                        window.location.href = this.href; // Use link's href
                    }
                });
            });

            // Ensure other dropdown items are clickable
            document.querySelectorAll('.dropdown-item:not(.logout-link):not(.disabled)').forEach(link => {
                link.addEventListener('click', function () {
                    window.location.href = this.href; // Normal navigation
                });
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>