@*
    File: Views/Shared/_AdminLayout.cshtml
*@
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 70px;
            background-color: #343a40;
            transition: width 0.3s;
            overflow-x: hidden;
            z-index: 1000;
        }

        .sidebar:hover {
            width: 220px;
        }

        .sidebar .nav-link {
            color: #fff;
            padding: 1rem;
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
        }

        .sidebar i {
            font-size: 1.2rem;
        }

        .sidebar span {
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .sidebar:hover span {
            opacity: 1;
        }

        .main-content {
            margin-left: 70px;
            transition: margin-left 0.3s;
            padding: 2rem;
        }

        .sidebar:hover~.main-content {
            margin-left: 220px;
        }
    </style>
</head>

<body>

    <div class="sidebar d-flex flex-column">
        <a href="/AdminDashboard" class="nav-link"><i class="bi bi-speedometer2"></i><span>Dashboard</span></a>
        <a href="/AdminProduct" class="nav-link"><i class="bi bi-box-seam"></i><span>Sản phẩm</span></a>
         <a href="/AdminBrand" class="nav-link"><i class="bi bi-box-seam"></i><span>Brand</span></a>
        <a href="/AdminOrder" class="nav-link"><i class="bi bi-receipt"></i><span>Đơn hàng</span></a>
        <a href="/AdminUser" class="nav-link"><i class="bi bi-people"></i><span>Người dùng</span></a>
        <a href="/AdminReport" class="nav-link"><i class="bi bi-graph-up"></i><span>Thống kê</span></a>
        <a href="/logout" class="nav-link mt-auto"><i class="bi bi-box-arrow-right"></i><span>Đăng xuất</span></a>

    </div>

    <div class="main-content">
        @RenderBody()
    </div>

       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

