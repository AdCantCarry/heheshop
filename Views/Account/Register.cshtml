@model heheshop.Models.User
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="register-box mx-auto" style="max-width: 500px;">
        <h2 class="mb-4 text-center">Tạo tài khoản</h2>

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input name="PasswordHash" class="form-control" type="password" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Đăng ký</button>
        </form>

        <div class="text-center">
            <a href="/Account/Login" class="login-link">Quay trở lại đăng nhập</a>
        </div>
    </div>
</div>

<style>
    .register-box {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .register-box .form-label {
        color: #ffffff;
        font-weight: 500;
    }

    .register-box .form-control {
        background-color: rgba(255, 255, 255, 0.9);
        color: #1a1a1a;
        border: 1px solid #ced4da;
        border-radius: 0.5rem;
        transition: border-color 0.3s ease;
    }

    .register-box .form-control:focus {
        border-color: #a3bffa;
        box-shadow: 0 0 5px rgba(163, 191, 250, 0.5);
    }

    .register-box .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .register-box .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
        transform: translateY(-2px);
    }

    .register-box .text-danger {
        font-size: 0.875rem;
        font-weight: 500;
    }

    .login-link {
        color: #a3bffa;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .login-link:hover {
        color: #ffffff;
        text-decoration: underline;
    }

    media (max-width: 576px) {
        .register-box {
            padding: 1.5rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}